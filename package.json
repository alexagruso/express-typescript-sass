{
    "name": "toolchain",
    "version": "1.0.0",
    "description": "",
    "main": ".eslintrc.js",
    "scripts": {
        "dev": "nodemon",
        "build": "npm run build:ts && npm run build:scss && npm run build:web",
        "build:ts": "tsc -p .",
        "build:scss": "sass ./public/styles/main.scss ./dist/public/styles/bundle.css",
        "build:web": "webpack",
        "start": "node ./dist/server.js",
        "clean": "rm -rf ./dist/*"
    },
    "nodemonConfig": {
        "watch": [
            "src",
            "public"
        ],
        "exec": "npm run build:scss && npm run build:web && ts-node -r tsconfig-paths/register ./src/server.ts",
        "ext": "ts, scss, ejs"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/cleave.js": "^1.4.7",
        "@types/express": "^4.17.14",
        "@types/node-sass": "^4.11.3",
        "@types/node-sass-middleware": "^0.0.32",
        "nodemon": "^2.0.20",
        "sass": "^1.56.0",
        "scss-bundle": "^3.1.2",
        "ts-loader": "^9.4.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.1.0",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-glob-entry": "^2.1.1"
    },
    "dependencies": {
        "cleave.js": "^1.6.0",
        "ejs": "^3.1.8",
        "express": "^4.18.2"
    }
}
